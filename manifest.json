{
  "manifest_version": 3,
  "name": "Pausitive Breathing",
  "version": "1.0.0",
  "description": "A simple, effective breathing technique app for stress relief and relaxation",
  "permissions": [],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Pausitive Breathing",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
