{
  "manifest_version": 3,
  "name": "Pausitive Breathing",
  "version": "1.0.0",
  "description": "A simple, effective breathing technique app for stress relief and relaxation",
  "permissions": [],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Pausitive Breathing",
    "default_icon": {
      "16": "public/favicon.svg",
      "32": "public/favicon.svg",
      "48": "public/favicon.svg",
      "128": "public/favicon.svg"
    }
  },
  "icons": {
    "16": "public/favicon.svg",
    "32": "public/favicon.svg",
    "48": "public/favicon.svg",
    "128": "public/favicon.svg"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
